@model List<Student>  
    

    <h2>Öğrenci Listesi</h2>

    <p>
       
        <a asp-action="Create" class="btn btn-primary">Yeni Öğrenci Ekle</a>
    </p>

    <table class="table table-hover table-bordered shadow-sm">
        <thead class="table-light">
            <tr>
                <th>Ad Soyad</th> 
                <th>Kayıt Tarihi</th> 
                <th>İşlem</th> 
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.FullName</td> 
                    <td>@student.EnrollmentDate.ToShortDateString()</td>
                    <td>
                      
                        <a href="/Students/Details/@student.Id" class="btn btn-sm btn-outline-primary">Detay</a>

                        
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@student.Id">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>


<!-- Students anasayfası butonları ve öğrencinin temel bilgilerini barındırıyor model olarak Student modelini kullanıyor -->