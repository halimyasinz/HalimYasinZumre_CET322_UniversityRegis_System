@model CET322Final.Models.ViewModels.StudentEnrollmentViewModel
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Öğrenciye Ders Ata";
    var studentList = new SelectList(Model.Students, "Id", "FullName");
    var courseList = new SelectList(Model.Courses, "Id", "Title");
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="StudentId"></label>
        <select asp-for="StudentId" class="form-control" asp-items="studentList">
            <option value="">-- Seçiniz --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="CourseId"></label>
        <select asp-for="CourseId" class="form-control" asp-items="courseList">
            <option value="">-- Seçiniz --</option>
        </select>
    </div>

    <br />
    <button type="submit" class="btn btn-success">Kaydet</button>
</form>

